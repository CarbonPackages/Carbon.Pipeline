# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Exceptions
[*.php]
max_line_length = 120

[{*.yaml,package.json,.*rc}]
indent_size = 2

[*.{js,mjs}]
max_line_length = 120

[*.md]
max_line_length = 120
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
