# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing-whitespace = true
indent_style = space
indent_size = 4

# Exceptions
[{*.{yaml,yml,sh,jscsrc},package.json,.*rc}]
indent_size = 2


[*.{js,mjs,mjsx}]
max_line_length = 120

[*.json]
max_line_length = 1000

# Export from flow
[Sites.xml]
indent_size = 1

# Template files
[*.{htm,html}]
max_line_length = 200
indent_size = 2

[*.{note,md,edit,read}]
max_line_length = 200
trim_trailing-whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 1
