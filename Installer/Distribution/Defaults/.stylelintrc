{
  "extends": "stylelint-config-standard",
  "ignoreFiles": [
    "**/Public/**",
    "**/Private/Templates/**",
    "node_modules/**",
    "**/*.noLinter.*"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ]
  }
}
