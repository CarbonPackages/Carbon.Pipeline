{
  "extends": "stylelint-config-recommended-scss",
  "ignoreFiles": [
    "**/Public/**",
    "**/Private/Templates/**",
    "node_modules/**",
    "**/*.noLinter.*"
  ],
  "rules": {
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "font-range",
          "min-font-size",
          "max-font-size",
          "lower-font-range",
          "upper-font-range",
          "font-awesome",
          "tap-highlight-color",
          "touch-callout"
        ]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "at-least",
          "at-most",
          "between",
          "exactly",
          "global"
        ]
      }
    ],
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": [
          "track",
          "thumb"
        ]
      }
    ],
    "selector-type-no-unknown": null,
    "no-descending-specificity": null
  }
}
